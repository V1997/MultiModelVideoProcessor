[flake8]
max-line-length = 120
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    .env,
    env,
    node_modules,
    .pytest_cache
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by IDEs)
per-file-ignores =
    __init__.py:F401
